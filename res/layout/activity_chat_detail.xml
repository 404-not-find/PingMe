<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatDetail.coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    tools:context="com.ankurmittal.learning.ChatDetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/chatDetail.toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:layoutDirection="ltr"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title=""
            tools:ignore="MergeRootFrame,UnusedAttribute" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chatDetail.toolbar.iconView"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="0dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/avatar_empty"
                    android:transitionName="dialogTransition" />

                <TextView
                    android:id="@+id/chatDetail.toolbar.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/chatDetail.toolbar.iconView"
                    android:layout_marginLeft="15dp"
                     android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/chatDetail.toolbar.iconView"
                    android:text="akakak" 
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:id="@+id/chatDetail.toolbar.subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/chatDetail.toolbar.iconView"
                    android:layout_alignLeft="@+id/chatDetal.toolbar.title"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/chatDetail.toolbar.iconView"
                    android:text="Online"
                    android:textAppearance="?android:attr/textAppearanceSmall" 
                     android:textSize="12sp"
                     android:textColor="@android:color/white"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/chat_detail_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            tools:ignore="MergeRootFrame" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>