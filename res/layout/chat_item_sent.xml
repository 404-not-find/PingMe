<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activated"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="8dp" >
    
     <com.ankurmittal.learning.emojicon.EmojiconTextView
         android:id="@+id/messageTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:layout_margin="2dp"
         android:background="@drawable/rounded_square"
         android:gravity="center"
         android:maxWidth="220dp"
         android:paddingBottom="6dp"
         android:paddingLeft="6dp"
         android:paddingRight="20dp"
         android:paddingTop="6dp"
         android:text="Hi how r u?"
         android:textAlignment="center"
         android:textColor="@android:color/white"
         android:textSize="20sp" />

     <TextView
         android:id="@+id/createdAtTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/messageTextView"
         android:layout_toLeftOf="@+id/messageTextView"
         android:text="TextView" />

     <ImageView
         android:id="@+id/sentStatusView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/messageTextView"
         android:layout_alignParentRight="true"
         android:src="@drawable/ic_action_sent"
        
         android:padding="1dp" />

</RelativeLayout>